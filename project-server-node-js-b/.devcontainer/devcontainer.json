{
  "name": "Dev Container",
  "dockerComposeFile": [
    "../../shared-dev-container/docker-compose.yml",
    "./docker-compose.override.yml"
  ],
  "service": "project-b-node-js",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest"
    },
    "ghcr.io/robbert229/devcontainer-features/postgresql-client:1": {}
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "postCreateCommand": "$(which zsh) -c 'source $HOME/.zshrc && pnpm install'",
  "updateContentCommand": "",
  "postStartCommand": "$(which zsh) -c 'source $HOME/.zshrc && pnpm install'",
  "postAttachCommand": "$(which zsh) -c 'source $HOME/.zshrc && nvm use 14 && node index.js'",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "dbaeumer.vscode-eslint@3.0.5",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "github.copilot"
      ]
    }
  }
}