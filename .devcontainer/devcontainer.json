{
  "name": "Dev Container",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "app",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "dbaeumer.vscode-eslint@3.0.5",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "github.copilot"
      ]
    }
  },
  "postCreateCommand": "echo 'DEV Container is Built!' && pnpm install",
  "updateContentCommand": "",
  "postStartCommand": "pnpm install",
  "postAttachCommand": "nvm use 14 && node index.js"
}