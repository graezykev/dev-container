{
  "name": "Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "note": "Dont set `workspaceFolder` for Codespaces; Or use `localEnv` to set `workspaceFolder`",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "dbaeumer.vscode-eslint@3.0.5",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "github.copilot"
      ]
    }
  },
  "postCreateCommand": "$(which zsh) -c 'source $HOME/.zshrc && pnpm install'",
  "updateContentCommand": "",
  "postStartCommand": "$(which zsh) -c 'source $HOME/.zshrc && pnpm install'",
  "postAttachCommand": "$(which zsh) -c 'source $HOME/.zshrc && nvm use 14 && node index.js'"
}