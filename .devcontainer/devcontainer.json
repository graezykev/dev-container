{
  "name": "Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "note1": "Dont set `workspaceFolder` when you run Dev Container on GitHub Codespaces;",
  "note2": "Must Set `workspaceFolder` when you run Dev Container on a local VS Code;",
  "note3": "Or, use `localEnv` etc. to set `workspaceFolder`",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "dbaeumer.vscode-eslint@3.0.5",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "github.copilot"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/post-create.sh",
  "updateContentCommand": "",
  "postStartCommand": ".devcontainer/post-start.sh",
  "postAttachCommand": ".devcontainer/post-attach.sh"
}
